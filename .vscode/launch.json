{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "gdb",
      "request": "launch",
      "name": "gdb: Debug tests",
      "target": "./test-all.exe",
      "cwd": "${workspaceRoot}"
    },

    {
      "name": "Python: Run current file",
      "type": "python",
      "request": "launch",
      "program": "${file}"
    },

    {
      "name": "Python: Run command",
      "type": "python",
      "request": "launch",
      "cwd": "${workspaceRoot}",
      "program": "${workspaceRoot}/translate.py",
      "args": [
        "-vvvv", "-a", "./asm/arch/*.py", "-e", "./asm/lang/*.py"
      ]
    }
  
}
