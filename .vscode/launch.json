{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "gdb",
      "request": "launch",
      "name": "gdb: Debug tests",
      "target": "./test-all.exe",
      "cwd": "${workspaceRoot}"
    },

    {
      "name": "Python: Run current file",
      "type": "python",
      "request": "launch",
      "program": "${file}"
    },

    {
      "name": "Python: Generate all sources",
      "type": "python",
      "request": "launch",
      "cwd": "${workspaceRoot}",
      "program": "${workspaceRoot}/translate.py",
      "args": [
        "-vvvv",
        "-a", "./asm/arch/*.py",
        "-e", "./asm/lang/c.py", "-e", "./asm/lang/csharp.py", "-e", "./asm/lang/nim.py"
      ]
    },

    {
      "name": "Python: Generate all bindings",
      "type": "python",
      "request": "launch",
      "cwd": "${workspaceRoot}",
      "program": "${workspaceRoot}/translate.py",
      "args": [
        "-vvvv", "--bindings",
        "-a", "./asm/arch/*.py",
        "-e", "./asm/lang/python.py", "-e", "./asm/lang/csharp.py"
      ]
    }
  
}
